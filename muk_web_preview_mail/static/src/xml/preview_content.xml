<templates>
	<div t-name="MailHTMLContent" class="o_preview_mail">
		<div class='loader mail-loader'>
			<div class='loader--dot'></div>
			<div class='loader--dot'></div>
			<div class='loader--dot'></div>
			<div class='loader--dot'></div>
			<div class='loader--dot'></div>
			<div class='loader--dot'></div>
			<div class='loader--text'></div>
		</div>
		<div class="mail-container">
			<div class="meta-panel">
				<div class="btn-group pull-right" role="group">
					<button type="button" class="btn btn-primary reply">Reply</button>
				</div>
				<table class="table meta-table">
            		<tbody>
	                     <tr>
	                       <td class="meta-tag">To:</td>
	                       <td id="meta-to"/>
	                     </tr>
	                     <tr>
	                       <td class="meta-tag">Cc:</td>
	                       <td id="meta-cc"/>
	                     </tr>
	                     <tr>
	                       <td class="meta-tag">From:</td>
	                       <td id="meta-from"/>
	                     </tr>
	                     <tr>
	                       <td class="meta-tag">Date:</td>
	                       <td id="meta-date"/>
	                     </tr>
	                     <tr>
	                       <td class="meta-tag">Subject:</td>
	                       <td><strong><span id="subject"/></strong></td>
	                     </tr>
                   </tbody>
            	</table>
			</div>
			<div class="content-panel">
				<div class="tab-line">
					<ul class="nav nav-tabs">
						<li class="active">
							<a href="#body" aria-controls="body" role="tab" data-toggle="tab">
								<i class="fa fa-envelope-o"></i><span>Messages</span>
							</a>
						</li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="body" />
					</div>
				</div>
			</div>
		</div>
	</div>
</templates>